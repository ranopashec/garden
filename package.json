        "sass": "^1.49.9"
    },
    "dependencies": {
        "@sindresorhus/slugify": "^1.1.0",
        "dotenv": "^16.0.3",
        "glob": "^10.2.1",
        "gray-matter": "^4.0.3",
        "markdown-it": "^14.1.0",
        "markdown-it-anchor": "^9.0.1",
        "node-html-parser": "^6.1.13",
